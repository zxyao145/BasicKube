@namespace BasicKube.Web.Components

<div class="d-flex form-control">
    <label class="@(Required ? "label-required" :"") @LabelCls" style="@LabelStyle">@LabelContent</label>
    <div class="form-content @ContentCls">
        @ChildContent
    </div>
</div>
@code{
    [Parameter]
    public bool Required{ get; set; }

    [Parameter]
    public string LabelCls { get; set; } = "";

    [Parameter]
    public string LabelStyle { get; set; } = "";

    [Parameter]
    public string ContentCls { get; set; } = "";
    
    [Parameter]
    public RenderFragment? LabelContent { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}